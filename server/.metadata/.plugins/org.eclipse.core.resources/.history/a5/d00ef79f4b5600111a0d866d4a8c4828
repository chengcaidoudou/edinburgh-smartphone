#include "Log.h"
#include <fstream>

Log::Log() {
	log_stream.open(GlobalVariables::logFileName.c_str(),fstream::app);
}

Log* Log::GetInstance()
{
	if(GlobalVariables::logger == NULL)
	{
		GlobalVariables::logger = new Log();
	}
	return GlobalVariables::logger;
}

Log::~Log() {
	log_stream.close();
}

void Log::write(const char* longline)
{

	log_stream << longline << endl;
}

void Log::Write(const char* line, va_list args)
{
	//va_list argList;
	char cbuffer[1024];
	va_start(args, line);
	vsnprintf(cbuffer, 1024,line, argList);
	va_end(args);
	Log::GetInstance()->write(cbuffer);
}

void Log::INFO(const char* line, ...)
{
	va_list argList;
	char cbuffer[1024];
	va_start(argList, line);
	strcat(cbuffer,"[INFO]");
	va_end(argList);
	Log::GetInstance()->Write(cbuffer);
}

void Log::ERROR(const char* line, ...)
{
	va_list argList;
	char cbuffer[1024];
	va_start(argList, line);
	strcat(cbuffer,"[ERROR]");
	va_end(argList);
	Log::GetInstance()->write(cbuffer);
}
